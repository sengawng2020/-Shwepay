<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHWE-PAY | Solana Payment Roadmap</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        :root { --p: #7f5af0; --s: #2cb67d; --bg: #0b0f19; --card: #161b2e; --text: #ffffff; }
        body { margin: 0; font-family: 'Plus Jakarta Sans', sans-serif; background: var(--bg); color: var(--text); line-height: 1.6; }
        header { padding: 100px 20px; text-align: center; background: radial-gradient(circle at top, rgba(127,90,240,0.15), transparent); }
        section { padding: 60px 20px; max-width: 1100px; margin: auto; }
        .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 25px; margin-top: 40px; }
        .card { background: var(--card); padding: 35px; border-radius: 24px; text-align: center; border: 1px solid rgba(255,255,255,0.05); transition: 0.3s; }
        .card:hover { transform: translateY(-10px); border-color: var(--p); }
        .btn { padding: 16px 36px; border-radius: 50px; text-decoration: none; font-weight: 700; cursor: pointer; border: none; display: inline-block; margin: 10px; }
        .btn-p { background: var(--p); color: white; }
        .btn-o { background: transparent; border: 2px solid rgba(255,255,255,0.2); color: white; }
        
        /* Roadmap Styling */
        .roadmap-item { text-align: left; position: relative; padding-left: 30px; margin-bottom: 20px; border-left: 2px solid var(--p); }
        .roadmap-item::before { content: ''; position: absolute; left: -9px; top: 0; width: 16px; height: 16px; border-radius: 50%; background: var(--s); }
        
        footer { padding: 60px; text-align: center; border-top: 1px solid rgba(255,255,255,0.05); opacity: 0.7; }
    </style>
</head>
<body>

<header>
    <h1 id="t-title" style="font-size: clamp(2.5rem, 8vw, 4rem); font-weight: 800; background: linear-gradient(135deg, var(--p), var(--s)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">The Future of <br>SHWE-PAY</h1>
    <p id="t-sub" style="color:#9aa4bf; font-size: 1.25rem; margin-bottom: 40px;">Next-generation payment ecosystem on Solana.</p>
    <div>
        <button class="btn btn-p" onclick="connectWallet()">Connect Wallet</button>
        <button class="btn btn-o" onclick="setLang('my')">မြန်မာဘာသာ</button>
    </div>
</header>

<section id="roadmap">
    <h2 id="t-rd-title" style="text-align:center; font-size: 2.5rem; margin-bottom: 50px;">Project Roadmap 2026</h2>
    <div class="grid">
        <div class="card">
            <h3 style="color: var(--s);">Phase 1: Launch</h3>
            <div class="roadmap-item"><p>Token Deployment on Solana</p></div>
            <div class="roadmap-item"><p>Community Building (TG/X)</p></div>
            <div class="roadmap-item"><p>Website V1 Release</p></div>
        </div>
        <div class="card">
            <h3 style="color: var(--p);">Phase 2: Growth</h3>
            <div class="roadmap-item"><p>DEX Listing (Jupiter/Raydium)</p></div>
            <div class="roadmap-item"><p>Marketing Campaign</p></div>
            <div class="roadmap-item"><p>Strategic Partnerships</p></div>
        </div>
        <div class="card">
            <h3 style="color: #ffbd2e;">Phase 3: Utility</h3>
            <div class="roadmap-item"><p>SHWE-PAY Wallet Beta</p></div>
            <div class="roadmap-item"><p>Payment Gateway Integration</p></div>
            <div class="roadmap-item"><p>Global Expansion</p></div>
        </div>
    </div>
</section>

<section id="tokenomics">
    <div class="card">
        <h2 id="t-contract">Contract Address</h2>
        <code style="display:block; background:#000; padding:15px; color:var(--s); border-radius:10px; word-break:break-all;">AFBuHorDPnseM2NQNrmFtPBaJUYuKNHksTJw4nfpyeQW</code>
        <br>
        <a href="https://jup.ag/swap/SOL-AFBuHorDPnseM2NQNrmFtPBaJUYuKNHksTJw4nfpyeQW" target="_blank" class="btn btn-p">Buy SHWE-PAY</a>
    </div>
</section>

<footer>
    <p>© 2026 SHWE-PAY Ecosystem. Built on Solana Blockchain.</p>
</footer>

<script>
    async function connectWallet() {
        if (window.solana) {
            await window.solana.connect();
            alert("Wallet Connected Successfully!");
        } else {
            alert("Please install Phantom Wallet");
        }
    }

    const langs = {
        my: {
            title: "ရွှေပေး (SHWE-PAY) ၏ အနာဂတ်",
            sub: "Solana ပေါ်တွင် အမြန်ဆုံးနှင့် အလုံခြုံဆုံး ငွေပေးချေမှုစနစ်။",
            rd: "စီမံကိန်း အဆင့်ဆင့် (Roadmap)",
            contract: "တရားဝင် Contract လိပ်စာ"
        }
    };

    function setLang(l) {
        document.getElementById('t-title').innerText = langs[l].title;
        document.getElementById('t-sub').innerText = langs[l].sub;
        document.getElementById('t-rd-title').innerText = langs[l].rd;
        document.getElementById('t-contract').innerText = langs[l].contract;
    }
</script>
</body>
</html>
