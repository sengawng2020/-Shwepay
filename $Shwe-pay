<script>
/* ---------- WALLET ---------- */
let walletPublicKey = null;
const TOKEN_MINT = "AFBuHorDPnseM2NQNrmFtPBaJUYuKNHksTJw4nfpyeQW";
const RPC = "https://api.mainnet-beta.solana.com";

function shorten(a){ return a.slice(0,4)+"..."+a.slice(-4); }

async function connectWallet(){
  if(!window.solana || !window.solana.isPhantom){
    alert("Please install Phantom Wallet");
    window.open("https://phantom.app","_blank");
    return;
  }
  const r = await window.solana.connect();
  walletPublicKey = r.publicKey.toString();
  document.getElementById("walletMessage").innerText =
    "Connected: " + shorten(walletPublicKey);
  loadBalances();
}

async function loadBalances(){
  const sol = await fetch(RPC,{method:"POST",headers:{"Content-Type":"application/json"},
    body:JSON.stringify({jsonrpc:"2.0",id:1,method:"getBalance",params:[walletPublicKey]})
  }).then(r=>r.json());
  const solBal = (sol.result.value/1e9).toFixed(4);

  document.getElementById("walletBalances").innerHTML =
    "SOL Balance: <strong>"+solBal+"</strong>";
}

/* ---------- LANGUAGE ---------- */
