<script>
    async function connectWallet() {
        if (window.solana) {
            await window.solana.connect();
            alert("Wallet Connected!");
        } else {
            alert("Please install Phantom Wallet");
            window.open("https://phantom.app", "_blank");
        }
    }

    function copyAddr() {
        navigator.clipboard.writeText('AFBuHorDPnseM2NQNrmFtPBaJUYuKNHksTJw4nfpyeQW');
        alert('Copied!');
    }

    const langs = {
        en: { title: "SHWE-PAY", sub: "Welcome to the future of Myanmar Fintech. Fast and secure payments on Solana.", tokenomics: "Tokenomics", contract: "Contract Address" },
        my: { title: "ရွှေပေး (SHWE-PAY)", sub: "မြန်မာ့ဖုန်းတက်ခ်၏ အနာဂတ်မှ ကြိုဆိုပါသည်။ Solana ပေါ်တွင် မြန်ဆန်လုံခြုံသော ငွေပေးချေမှုစနစ်။", tokenomics: "တိုကင်အချက်အလက်", contract: "တရားဝင်လိပ်စာ" }
    };

    function setLang(l) {
        document.getElementById('t-title').innerText = langs[l].title;
        document.getElementById('t-sub').innerText = langs[l].sub;
        document.getElementById('t-tokenomics').innerText = langs[l].tokenomics;
        document.getElementById('t-contract').innerText = langs[l].contract;
    }
</script>
