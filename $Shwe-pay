function setLang(l){
  document.querySelectorAll("[data-i18n]").forEach(e=>{
    const k=e.getAttribute("data-i18n");
    if(translations[l][k]) e.innerText=translations[l][k];
  });
  localStorage.setItem("lang",l);
}
setLang(localStorage.getItem("lang")||"en");
